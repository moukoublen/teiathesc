<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dip"
    android:background="@drawable/widshape" 
    android:padding="@dimen/widget_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:src="@drawable/tei_logo" 
        android:gravity="left|top"
        android:contentDescription=""
        android:layout_margin="10sp"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/widget_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:text="@string/widget_current"
            android:textSize="14sp"
            android:textColor="#B9B9B9" />

        <TextView
            android:id="@+id/wd_tx_current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:text="@string/widget_current_emtpy"
            android:textSize="14sp" 
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/wd_tx_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="left|top"
            android:text="@string/widget_upcoming"
            android:textSize="14sp"
            android:textColor="#B9B9B9" />

        <TextView
            android:id="@+id/wd_tx_upcoming_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:text="@string/widget_upcoming_empty"
            android:textSize="14sp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>